<Frame name="mainmenu">
    <Label text="Security System" font="C:('Segoe UI',20)">
        <grid row = "0" column="0"></grid>
    </Label>
    <Frame name="doorbellstatuscontainer">
        <grid row="1" column="0"></grid>
        <Label text="Doorbell: " >
            <grid row = "0" column="0"></grid>
        </Label>
        <Label text="Not Connected" name="doorbellstatus" foreground="green">
            <grid row="0" column="1"></grid>
        </Label>
    </Frame>
    <Label text="Recently detected persons" font="C:('Segoe UI',15)">
        <grid row="2" column="0"></grid>
    </Label>
    <Frame name="recentlydetectedpersons">
        <grid row="3" column="0"></grid>
        <Frame>
            <grid row="0" column="0"></grid>
            <Label text="00:00:00 01/01/0000" name="persondate"><pack side="TK::LEFT"></pack></Label>
            <Label text="Stranger" name="personname"><pack side="TK::LEFT"></pack></Label>
            <Button text="Add Identity" name="identity" command="C:lambda:print('idk')"><pack side="TK::LEFT"></pack></Button>
        </Frame>
        <Frame>
            <grid row="1" column="0"></grid>
            <Label text="00:00:00 01/01/0000" name="persondate"><pack side="TK::LEFT"></pack></Label>
            <Label text="Dangerous Person" name="personname" foreground="#ff0000" font="C:('Segoe UI',10,'bold')"><pack side="TK::LEFT"></pack></Label>
            <Button text="Edit Identity" name="identity" command="C:lambda:print('idk')"><pack side="TK::LEFT"></pack></Button>
        </Frame>
    </Frame>
</Frame>