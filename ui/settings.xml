<Frame name="settings">
    <Label text="Settings" font="C:('Segoe UI',20)">
        <grid row = "0" column="0"></grid>
    </Label>
    <Label text="Face Recognition" font="C:('Segoe UI',15)"><grid row="1" column="0"></grid></Label>
    <Checkbutton text="Detect Faces" name="detectface"><grid row="2" column="0"></grid></Checkbutton>
    <Checkbutton text="Label Faces" name="labelface"><grid row="3" column="0"></grid></Checkbutton>
    <Label text="Application" font="C:('Segoe UI',15)"><grid row='4' column='0'></grid></Label>
    <Checkbutton text="Run on startup" ><grid row="5" column="0"></grid></Checkbutton>
    <Button text="Quit" command="C:quit"><grid row="6" column="0"></grid></Button>
</Frame>