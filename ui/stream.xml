<Frame name="stream">
    <Label text="Livestream" font="C:('Segoe UI',20)"><grid row="0" column="0"></grid></Label>
    <Canvas name="livestream" width="960" height="540"><grid row="1" column="0"></grid></Canvas>
    <Frame name="controls">
        <grid row="2" column="0"></grid>
        <!--Controls-->
        <Button text="Identify Face" name="identifyface"><pack side="left"></pack></Button>
        <Checkbutton text="Face Detection" name="detectface"><pack side="left" padx="10"></pack></Checkbutton>
        <Checkbutton text="Face Labeling" name="labelface"><pack side="left" padx="10"></pack></Checkbutton>
        <Label text="Placeholder" name="action"></Label>
    </Frame>
    <Frame name="status">
        <grid row="3" column="0"></grid>
        <!--Info-->
        <Frame name="connectionstatuscontainer">
            <grid row="0" column="0"></grid>
            <Label text="Connection Status: "><grid row="0" column="0"></grid></Label>
            <Label text="Not Connected" foreground="red" name="connectionstatus"><grid row="0" column="1"></grid></Label>
        </Frame>
        <Frame name="fpscontainer">
            <grid row="0" column="1"></grid>
            <Label text="0" name="fps"><grid row="0" column="0"></grid></Label>
            <Label text="FPS"><grid row="0" column="1"></grid></Label>
        </Frame>
        <Frame name="terminateconnectioncontainer">
            <grid row="0" column="2"></grid>
            <Button name="terminateconnection" text="Terminate Connection" foreground="white" background="red" activeforeground="white" activebackground="#c80000"><pack side="left"></pack></Button>
        </Frame>
    </Frame>
</Frame>